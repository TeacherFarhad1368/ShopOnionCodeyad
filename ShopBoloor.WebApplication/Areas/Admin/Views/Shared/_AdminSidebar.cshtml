@inject IHttpContextAccessor _accessor;
@inject Shared.Application.Services.Auth.IAuthService _auth;
@{
    var route = _accessor.HttpContext.Request.Path;
}
<aside class="main-sidebar">
    <section class="sidebar">
        <div class="user-panel">
            <div class="pull-right image">
                <img src="/Images//User//100/@_auth.GetLoginUserAvatar()" class="img-circle" alt="User Image">
            </div>
            <div class="pull-right info">
                <p>@_auth.GetLoginUserFullName()</p>
                <a><i class="fa fa-circle text-success"></i> آنلاین</a>
            </div>
        </div>
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">منو</li>
            <li class="@(route.ToString().ToLower().Trim() == "/admin" ? "active" : "") treeview">
                <a href="#">
                    <i class="fa fa-dashboard"></i> <span>داشبرد</span>
                    <span class="pull-left-container">
                        <i class="fa fa-angle-right pull-left"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="/"><i class="fa fa-home"></i> صفحه اصلی سایت</a></li>
                    <li class=@(route.ToString().ToLower().Trim() == "/admin" ? "active" : "")>
                        <a href="/Admin"><i class="fa fa-dashboard"></i>  صفحه اصلی ادمین</a>
                    </li>
                    <li><a href="/UserPanel"><i class="fa fa-user"></i>  پنل کاربری</a></li>
                    
                </ul>
            </li>
            <li class="@(route.ToString().ToLower().Trim().Contains("/admin/role") 
             || route.ToString().ToLower().Trim().Contains("/admin/user") ? "active" : "") treeview">
