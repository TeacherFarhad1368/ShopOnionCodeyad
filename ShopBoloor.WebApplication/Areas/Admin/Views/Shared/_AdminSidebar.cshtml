            || route.ToString().ToLower().Trim().Contains("/admin/baner")
            || route.ToString().ToLower().Trim().Contains("/admin/slider")
            || route.ToString().ToLower().Trim().Contains("/admin/service")
            || route.ToString().ToLower().Trim().Contains("/admin/menu")
              ? "active" : "") treeview">
