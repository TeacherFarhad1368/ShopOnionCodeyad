                    <i class="fa fa-user"></i> <span>مدیریت کاربران</span>
                    <span class="pull-left-container">
                        <i class="fa fa-angle-right pull-left"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class=@(route.ToString().ToLower().Trim().Contains("/admin/role") ? "active" : "")>
                        <a href="/Admin/Role"><i class="fa fa-user-secret"></i>  سطوح دسترسی</a>
                    </li>
                    <li class=@(route.ToString().ToLower().Trim().Contains("/admin/user") ? "active" : "")>
                        <a href="/Admin/User"><i class="fa fa-users"></i>  کاربران سایت</a>
                    </li>
                </ul>
            </li>
            <li class="@(route.ToString().ToLower().Trim().Contains("/admin/seller")
             || route.ToString().ToLower().Trim().Contains("/admin/sell") ? "active" : "") treeview">
                <a href="#">
                    <i class="fa fa-shopping-bag"></i> <span>مدیریت فروشگاه ها</span>
                    <span class="pull-left-container">
                        <i class="fa fa-angle-right pull-left"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class=@(route.ToString().ToLower().Trim() =="/admin/seller/index" || route.ToString().ToLower().Trim() =="/admin/seller" ? "active" : "")>
                        <a href="/Admin/Seller/Index"><i class="fa fa-shopping-bag"></i> فروشگاه ها</a>
                    </li>
                    <li class=@(route.ToString().ToLower().Trim().Contains("/admin/seller/requ") ? "active" : "")>
                        <a href="/Admin/Seller/Requests"><i class="fa fa-shopping-cart"></i>  در خواست های فروشگاه</a>
                    </li>
                </ul>
            </li>
            <li class="@(route.ToString().ToLower().Trim().Contains("/admin/order") ? "active" : "") treeview" >
                <a href="#">
                    <i class="fa fa-paypal"></i> <span>مدیریت سفارشات</span>
                    <span class="pull-left-container">
                        <i class="fa fa-angle-right pull-left"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class=@(route.ToString().ToLower().Trim() =="/admin/order/index" ||
