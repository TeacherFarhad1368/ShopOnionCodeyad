@model Users.Application.Contract.UserApplication.Command.LoginUser
@{
    ViewData["Title"] = "ورود به سایت";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="account-box-title text-right">ورود به سایت</div>
<div class="account-box-content">
    <form class="form-account" method="post" asp-action="LoginUser">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-account-title">شماره موبایل</div>
        <div class="form-account-row">
            <label class="input-label"><i class="now-ui-icons users_single-02"></i></label>
            <input class="input-field text-left" type="text" ‌ asp-for="Mobile"
                   onkeypress="return isNumber(event)" readonly>
            <span class="text-danger" asp-validation-for="Mobile"></span>
        </div>
        <div class="form-account-title">
            کد ارسالی به تلفن همراه
        </div>
        <div class="form-account-row">
        <label class="input-label">
        <i class="now-ui-icons ui-1_lock-circle-open"></i>
        </label>
            <input class="input-field text-left" type="text" asp-for="Password" onkeypress="return isNumber(event)">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-account-row form-account-submit">
            <div class="parent-btn">
                <button type="submit" class="dk-btn dk-btn-info">
                    ورود به سایت
                    <i class="fa fa-sign-in"></i>
                </button>
            </div>
        </div>
