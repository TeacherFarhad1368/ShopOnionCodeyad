@model List<Query.Contract.UI.Product.ProductCartForIndexQueryModel>

@if(Model.Count() > 0)
{
    <div class="row">
        <div class="col-12">
            <div class="widget widget-product card">
                <header class="card-header">
                    <h3 class="card-title">
                        <span>پر فروش ترین محصولات</span>
                    </h3>
                    <a href="/shop?pageId=1&slug=&orderBy=پرفروش_ترین" class="view-all">مشاهده همه</a>
                </header>
                <div class="product-carousel owl-carousel owl-theme">
                    @foreach (var item in Model)
                    {
                        <partial name="_ShopSlideCart" model="@item" />
                    }
                </div>
            </div>
        </div>
    </div>
}